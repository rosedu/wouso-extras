<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BlueButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/menubutton</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="mainMenuButtons">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/menubutton</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="specialButtons">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/specialbuttoncolors</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="profileFrame">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="userProfileButtons">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/menubutton</item>
        <item name="android:textColor">#FFF</item>
    </style>

</resources>